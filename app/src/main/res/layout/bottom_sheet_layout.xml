<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minHeight="370dp"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proverb"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-1dp"/>
    <View
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:background="#9d9a9a"
        android:layout_marginBottom="4dp"/>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#e2efd7d7"
        app:contentPadding="7dp"
        android:foregroundGravity="center">
        <TextView
            android:id="@+id/proverb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trysiusfososbfsoivvkzvnkzv"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Literal Translation"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-1dp"/>
    <View
        android:layout_width="85dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:background="#9d9a9a"
        android:layout_marginBottom="4dp"/>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:contentPadding="7dp"
        android:layout_gravity="end"
        app:cardBackgroundColor="#dba7a7"
        android:foregroundGravity="center">
        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trysiusfososbfsoivvkzvnkzv"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/explanation_usage"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-1dp"/>
    <View
        android:layout_width="95dp"
        android:layout_height="1dp"
        android:background="#9d9a9a"
        android:layout_marginBottom="4dp"/>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:contentPadding="7dp"
        app:cardBackgroundColor="#8da13131"
        android:foregroundGravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trysiusfososbfsoivvkzvnkzv"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

</LinearLayout>